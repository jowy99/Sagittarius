---
import Footer from "../components/blocks/footer.astro";
import { ClientRouter } from "astro:transitions";

interface Props{
  title: string;
}

const imageImports = import.meta.glob('/src/assets/images/*.{jpg,png,jpeg}');
const imagesToPreload = Object.keys(imageImports);

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="Building amazing things">

    <!-- OG Meta Tags -->
    <meta property="og:url" content="https://test.joelarnaud.com/">
    <meta property="og:type" content="website">
    <meta property="og:title" content="Joël Arnaud Carreras | Web developer">
    <meta property="og:description" content="Building amazing things">
    <meta property="og:image" content="https://test.joelarnaud.com/joel.jpeg">

    <!-- Twitter Meta Tags -->  
    <meta name="twitter:card" content="summary_large_image">
    <meta property="twitter:domain" content="test.joelarnaud.com">
    <meta property="twitter:url" content="https://test.joelarnaud.com/">
    <meta name="twitter:title" content="Joël Arnaud Carreras | Web developer">
    <meta name="twitter:description" content="Building amazing things">
    <meta name="twitter:image" content="https://test.joelarnaud.com/joel.jpeg">
    <meta name="twitter:creator" content="jowy_1999">

    <!-- FavIcon -->
    <link rel="shortcut icon" href="/Sagilogo.jpg" type="image/x-icon">
    <link rel="icon" sizes="57x57" href="/57x57.png" type="image/x-icon">
    <link rel="icon" sizes="120x120" href="/120x120.png" type="image/x-icon">
    <link rel="icon" sizes="128x128" href="/128x128.png" type="image/x-icon">
    <link rel="apple-touch-icon" sizes="150x150" href="/150x150.jpg" type="image/x-icon">
    <link rel="icon" sizes="167x167" href="/167x167.jpg" type="image/x-icon">
    <link rel="icon" sizes="192x192" href="/192x192.jpg" type="image/x-icon">
    <link rel="icon" sizes="196x196" href="/196x196.jpg" type="image/x-icon">
    <link rel="apple-touch-icon" sizes="228x228" href="/228x228.jpg" type="image/x-icon">

    <ClientRouter/>
    
    {imagesToPreload.map((image) => (
      <link rel="preload" as="image" href={image} />
    ))}

    <title>{title}</title>
  </head>
  <body class="font-AlbertSans antialiased dark:bg-zinc-800">
    <slot/>
    <Footer/>
  </body>
</html>