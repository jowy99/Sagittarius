<script>
    document.addEventListener('DOMContentLoaded', () => {
        const backButton = document.querySelector('#back-button');
        if (backButton) {
            backButton.addEventListener('click', (event) => {
                event.preventDefault();
                if (window.history.length > 1) {
                    window.history.back();
                } else {
                    window.location.href = '/';
                }
            });
        }
    });
</script>