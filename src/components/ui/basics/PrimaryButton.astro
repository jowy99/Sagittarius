---
const { type, props } = Astro.props;
---
<button 
    type={type}
    class={`inline-flex items-center shadow-md justify-center px-4 py-2 rounded-md font-semibold text-xs md:text-sm lg:text-md uppercase tracking-widest 
        transition ease-in-out duration-150 focus:outline-none focus:ring-2 focus:ring-offset-2 border 
        bg-neutral-500 text-light-50 border-neutral-500 hover:bg-neutral-400 focus:bg-neutral-600 active:bg-neutral-700 focus:ring-neutral-400 dark:bg-warm-700 dark:text-light-50 dark:border-warm-600 dark:hover:bg-warm-600 dark:focus:bg-warm-500 dark:active:bg-warm-400 dark:focus:ring-warm-300
        ${props}`}
>
    <slot />
</button>