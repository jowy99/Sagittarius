    <polygon points="300,0 285,0 0,155 0,170 15,170 300,15" fill="#C8102E" />
    
    <!-- Cruz blanca horizontal y vertical -->
    <rect x="120" y="0" width="60" height="200" fill="#FFF" />
    <rect x="0" y="70" width="300" height="60" fill="#FFF" />
    
